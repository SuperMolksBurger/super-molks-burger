---
import Layout from '../../../components/Layout.astro'
import {combos} from '../../../data/menu.json'


---

<Layout pageTitle="Combo Especial">

	<div class="interiorTitle bg-black mb-11 mt-40">
		<div class="container mx-auto">
			<div class="interioTitle_info flex items-center">
				<img class="w-24" src="/iconos/icono-combos.png" alt="">
				<h1 class="ml-7 text-orange-400">Combos</h1>
			</div>
		</div>
	</div>

	{
		<section class="ficha_producto mt-40 mb-40">
			<div class="container p-4 md:columns-2 mx-auto">
				<div class="">
					<img src={combos[0].img}>
				</div>
				<div class="ficha_producto-data md:flex md:justify-center md:flex-col p-4">
					<h2 class="text-center md:text-left uppercase font-bold m-0">Combo {combos[0].name} 
						<span class="priceInterior">${combos[0].price}
						<sup>.00</sup></span>
					</h2>
					<p class="m-0 text-center md:text-left">
						{combos[0].desc}
					</p>
					<div class="btnList">
						<h3 class="text-center md:text-left m-0">Haz tu pedido por DidiFood</h3>
						<div class="flex flex-wrap">
							<a class="btnDidiFood " href="#">Sucursal Camino Real</a>
							<a class="btnDidiFood " href="#">Sucursal Nazas</a>
							<a class="btnDidiFood " href="#">Sucursal La Forestal</a>
							<a class="btnDidiFood " href="#">Sucursal Huizache</a>
							<a class="btnDidiFood "	 href="#">Sucursal Centro</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	}
	
</Layout>